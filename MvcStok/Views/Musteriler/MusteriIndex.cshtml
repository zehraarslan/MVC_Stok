@using MvcStok.Models.Entity;
@model  List<TBLMUSTERILER>
@{
    ViewBag.Title = "MusteriIndex";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("MusteriIndex", "Musteriler", FormMethod.Get))
{
    <p>
        <b>Aranacak müşteri adı: @Html.TextBox("p")</b>
        <input  type="submit" value="Ara"/>
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞETERİ ID</th>
        <th>MÜŞTERİ AD</th>
        <th>MÜŞTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
        <tr>
            <th>@mstr.MUSTERIID</th>
            <td>@mstr.MUSTERIAD</td>
            <td>@mstr.MUSTERISOYAD</td>
            <td><a href="/Musteriler/MusteriSil/@mstr.MUSTERIID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Musteriler/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
            }
    </tbody>
</table>
<a href="/Musteriler/MusteriEkle/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
